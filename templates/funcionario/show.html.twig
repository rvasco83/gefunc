{% extends 'base.html.twig' %}

{% block title %}Funcionario{% endblock %}

{% block body %}
    <h1>Funcionario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ funcionario.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ funcionario.nome }}</td>
            </tr>
            <tr>
                <th>Logadouro</th>
                <td>{{ funcionario.logadouro }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ funcionario.numero }}</td>
            </tr>
            <tr>
                <th>Bairro</th>
                <td>{{ funcionario.bairro }}</td>
            </tr>
            <tr>
                <th>Cidade</th>
                <td>{{ funcionario.cidade }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ funcionario.estado }}</td>
            </tr>
            <tr>
                <th>Identidade</th>
                <td>{{ funcionario.identidade }}</td>
            </tr>
            <tr>
                <th>Imagem_documento</th>
                <td><img width="100" src="/uploads/imagens/"{{ funcionario.imagemDocumento }}</td>
            </tr>
            <tr>
                <th>Cargo</th>
                <td> {% if funcionario.cargo == "C"%}
                        <p>Comissionado</p>
                    {% elseif funcionario.cargo == "E"%}
                        <p>Efetivo</p>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Status</th>
                <td> {% if funcionario.status == "A"%}
                        <p>Ativo</p>
                    {% elseif funcionario.status == "E"%}
                        <p>Exonerado</p>
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Data_admissao</th>
                <td>{{ funcionario.dataAdmissao|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Data_exoneracao</th>
                <td>{{ funcionario.dataExoneracao|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Salario_base</th>
                <td>{{ funcionario.salarioBase|number_format(2, ',', '.') }}</td>
            </tr>
            <tr>
                <th>Gratificacao</th>
                <td>{{ funcionario.gratificacao|number_format(2, ',', '.') }}</td>
            </tr>
            <tr>
                <th>Desconto</th>
                <td>{{ funcionario.desconto|number_format(2, ',', '.') }}</td>
            </tr>
            <tr>
                <th>Salario_liquido</th>
                <td>{{ funcionario.salarioLiquido|number_format(2, ',', '.') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('funcionario_index') }}">back to list</a>

    <a href="{{ path('funcionario_edit', {'id': funcionario.id}) }}">edit</a>

    {{ include('funcionario/_delete_form.html.twig') }}
{% endblock %}