{% extends 'base.html.twig' %}

{% block title %}Usuários - {% endblock %}

{% block body %}
    <h1>{{ usuario.nome }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Matrícula</th>
                <td>{{ usuario.matricula }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ usuario.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ usuario.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ usuario.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ usuario.roles |join('|')}}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="form-group col-4">
            <a href="{{ path('usuario_index') }}" class="btn btn-primary btn-sm">Voltar</a>
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path('usuario_edit', {'id': usuario.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                {{ include('usuario/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}