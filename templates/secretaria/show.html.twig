{% extends 'base.html.twig' %}

{% block title %}Secretarias - {% endblock %}

{% block body %}
    <h1>{{ secretarium.nome }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ secretarium.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ secretarium.nome }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="form-group col-4">

            <a href="{{ path('secretaria_index') }}" class="btn btn-primary btn-sm">Voltar</a>

            <a href="{{ path('secretaria_edit', {'id': secretarium.id}) }}" class="btn btn-primary btn-sm">Editar</a>
            {% if is_granted("ROLE_ADMIN") %}
                {{ include('secretaria/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}