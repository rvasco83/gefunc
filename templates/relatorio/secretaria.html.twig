{% extends 'base.html.twig' %}

{% block title %}Relatórios - {% endblock %}

{% block body %}

    <h1>Relatório de Secretarias</h1>
    <br>
    <div class="row">
        <div class="form-group col-12">
            <a href='{{ path('secretaria_pdf') }}' class="btn btn-primary btn-sm">Gerar PDF</a>
            <a href='{{ path('secretaria_excel') }}' class="btn btn-primary btn-sm">Gerar Excel</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Total de Salário</th>
            <th>Secretaria</th>
        </tr>
        </thead>
        <tbody>
        {% for totalSalario in totalSalarios %}
            <tr>
                <td>{{ totalSalario.total|number_format(2, ',', '.') }}</td>
                <td>{{ totalSalario.nome }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>

        {% endfor %}
        </tbody>
        <tr>
        </tr>
    </table>
    <a href='{{ path('relatorio_index') }}' class="btn btn-primary btn-sm">Voltar</a>


{% endblock %}