</style>

<h1>Relatório</h1>

<table class="table">
    <thead>
    <tr>
        <th>Total de Salário</th>
        <th>Secretaria</th>
    </tr>
    </thead>
    <tbody>
    {% for totalSalario in totalSalarios %}
        <tr>
            <td>{{ totalSalario.total|number_format(2, ',', '.') }}</td>
            <td>{{ totalSalario.nome }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="18">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
